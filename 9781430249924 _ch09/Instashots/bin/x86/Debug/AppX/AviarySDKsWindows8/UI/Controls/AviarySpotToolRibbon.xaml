<UserControl
    x:Class="AviarySDKsWindows8.UI.Controls.AviarySpotToolRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AviarySDKsWindows8.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100" Height="100"
    d:DesignWidth="400">
    <UserControl.Resources>
        <!--<ResourceDictionary Source="../../Themes/AviaryResources.xaml" />-->
    </UserControl.Resources>
    <Grid>
        <ListBox   ItemsSource="{Binding SpotOptions}" SelectedItem="{Binding SelectedOption, Mode=TwoWay}" Style="{StaticResource AviaryRibbonListBoxStyle}"
			ItemTemplate="{StaticResource AviaryRibbonSpotToolItemItemTemplate}" Margin="0" />
    </Grid>
</UserControl>